@using TravelTripProject.Models.Siniflar
@model List<Blog>
<div class="con-bot">
    @foreach (var item in Model)
    {
    <div style="width:29%;float:left;" class="left">
        <div class="bot-left">
            <img width="260" height="195" src="@item.BlogImage" alt="" />
        </div>
        <div class="left-text">
            <h4>@item.Baslik</h4>
            <span class="doller">@item.Tarih.ToString("dd.MM.yyyy")</span>
            <p>@item.Aciklama.Substring(0,50) ..</p>
            <p><a href="/Blog/BlogDetay/@item.Id"><span class="read">Daha Fazla Oku >></span></a></p>
        </div>
    </div>
    }
    
    <div class="clear"></div>
</div>

