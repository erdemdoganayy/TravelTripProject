@using TravelTripProject.Models.Siniflar
@model TravelTripProject.Models.Siniflar.BlogYorum
@{
    ViewBag.Title = "BlogDetay";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}

<html>
<head>
    <title>Personal Blog a Blogging Category Flat Bootstarp  Responsive Website Template | Single :: w3layouts</title>
    <link href="~/web_blog/css/bootstrap.css" rel='stylesheet' type='text/css' />
    <link href="~/web_blog/css/style.css" rel='stylesheet' type='text/css' />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Personal Blog Responsive web template, Bootstrap Web Templates, Flat Web Templates, Andriod Compatible web template,
	Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyErricsson, Motorola web design" />
    <link href='http://fonts.googleapis.com/css?family=Oswald:100,400,300,700' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Lato:100,300,400,700,900,300italic' rel='stylesheet' type='text/css'>
</head>
<body>

    <div class="single">
        <div class="container">
            <div class="col-md-8 single-main">
                @foreach (var item in Model.Blogs)
                {
                    <div class="single-grid">
                        <img style="margin-bottom:2rem" src="@item.BlogImage" alt="" />
                        <h4>@item.Baslik</h4>
                        <p>
                            @item.Aciklama
                        </p>
                    </div>
                }

                @foreach (var item in Model.Yorums)
                {
                   
                        <ul class="comment-list">
                            <h5 class="post-author_head">Yazan : <a href="#" title="Posts by admin" rel="author">@item.KullaniciAdi</a></h5>
                            <li>
                                <img src="~/web_blog/images/avatar.png" class="img-responsive" alt="">

                                <p style="color: #8484A4">Yorum : @item.Yorum</p>

                                <div class="clearfix"></div>
                            </li>
                        </ul>
                 
                }
              @Html.Action("PartialYorumYap","Blog")
            </div>

            <div class="col-md-4 side-content">
                <div class="recent">
                    <h3>RECENT POSTS</h3>
                    <ul>
                        <li><a href="#">Aliquam tincidunt mauris</a></li>
                        <li><a href="#">Vestibulum auctor dapibus  lipsum</a></li>
                        <li><a href="#">Nunc dignissim risus consecu</a></li>
                        <li><a href="#">Cras ornare tristiqu</a></li>
                    </ul>
                </div>
                <div class="comments">
                    <h3>RECENT COMMENTS</h3>
                    <ul>
                        <li><a href="#">Amada Doe </a> on <a href="#">Hello World!</a></li>
                        <li><a href="#">Peter Doe </a> on <a href="#"> Photography</a></li>
                        <li><a href="#">Steve Roberts  </a> on <a href="#">HTML5/CSS3</a></li>
                    </ul>
                </div>


            </div>
            <div class="clearfix"></div>
        </div>
    </div>
</body>
</html>






